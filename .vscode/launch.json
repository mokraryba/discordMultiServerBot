{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug TypeScript",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/src/main.ts",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--import",
				"tsx"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"console": "integratedTerminal"
		}
	]
}